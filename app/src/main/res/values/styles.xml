<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

    </style>
    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>




    <style name="Body1TextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="EditTextStyle">
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>


    <style name="SwitchTheme">
        <item name="android:colorForeground">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="td_toolbar_popup_theme">
    </style>
    <style name="td_toolbar_theme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="td_toolbar_title">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
