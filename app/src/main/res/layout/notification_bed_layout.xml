<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sound_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/tab_bg">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/notification_ic_bed_remind" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/bed_time"
        android:layout_toEndOf="@+id/icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bed_remind_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:lines="1"
            android:text="@string/bedtime_reminder"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bed_remind_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:lines="1"
            android:text="@string/it_s_time_for_bed"
            android:textColor="@color/white_50"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="178dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/pic_sound_notification_bg" />

    <TextView
        android:id="@+id/bed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/white_50"
        android:textSize="13sp" />
</RelativeLayout>
