<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sound_play_layout"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/shape_play_sound_icon_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sound_icon_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/vector_sound_ic_bird" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sound_count_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:background="@drawable/shape_play_sound_count_bg"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sound_volume_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound_play_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/white_50"
        android:textSize="12sp" />
</RelativeLayout>
